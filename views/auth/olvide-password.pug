extends ../layout/index

block contenido 
  div(class="py-10")
    h1(class="text-4xl my-10 font-extrabold text-center") Bienes
      span(class="font-normal") Raices
    h2(class="text-center text-2xl font-extrabold")=pagina

    if errores 
      div(class="max-w-md mx-auto my-10")
        each error in errores
          p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")=error.msg
          
    div(class="mt-8 mx-auto max-w-md")
      div(class="bg-white py-8 px-4 shadow")
        form(method='post' action='/auth/olvide-password')
          input(type="hidden" name="_csrf" value=csrfToken)
         
          div(class="mt-5") 
           label(class="block text-sm uppercase text-gray-500 mb-2 font-bold")(for='email') Tu Email
           input#email(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400")(placeholder="Tu Email" type="email" name="email")
         
         
          input(type="submit" value="Enviar Instrucciones" class="mt-5 w-full bg-indigo-600 py-3 text-white font-bold rounded-md hover:bg-indigo-700 transition-colors cursor-pointer")

        div(class="mt-5 flex items-center justify-between")
          a(href="login" class="text-gray-500 text-xs") ¿Ya tienes cuenta? Inicia Sesión
          a(href="registro" class="text-gray-500 text-xs") ¿No tienes cuenta? Registrate